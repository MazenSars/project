<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Free Voice</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--get bootstrap's css via cdn to benefit from extra speed-->
    <link rel="stylesheet" href="~/css/main.css" />
</head>

<body>
    <!--header-->
    <header>
        <nav class="navbar navbar-expand-lg bg-dark-subtle px-2 mb-4">
            <div class="col-md-1 col-2">
                <a class="navbar-brand text-success fw-bold fs-6" href="#">
                    <img src="~/img/revolution-still-life-design.jpg" class="img-fluid rounded" />
                    Support Free Speach
                </a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-target="#items" data-bs-toggle="collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center badge fs-6" id="items">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link link-primary" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link-primary" aria-current="page" asp-controller="Home" asp-action="Petition">Create a Petition</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn text-primary dropdown-toggle" data-bs-toggle="dropdown"
                                aria-expanded="false">
                            Members
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Action</a></li>
                            <li><a class="dropdown-item" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Another action</a></li>
                            <li><a class="dropdown-item" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Something else here</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link link-primary" aria-current="page" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

   <footer class="footer bg-dark text-white text-center pt-3">
        <div class="container">
                <div class="row">
                <div class="col">
                    <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    </div>
                    <div class="col">
                    <p>Email: mazen_sars@vk.com</p>
                    </div>
                    <div class="col">
                    <p>Phone: +44 7011-101101</p>
                    </div>
                    </div>
                    <div class="row">
                    <div class="col">
                    <p class="d-inline">follow us on social media </p>
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <a href="https://www.facebook.com/" target="_blank" class="text-light">
                                <i class="fab fa-facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://twitter.com/" target="_blank" class="text-light">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.instagram.com/" target="_blank" class="text-light">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.tiktok.com/" target="_blank" class="text-light">
                                <i class="fa-brands fa-tiktok"></i>
                            </a>
                        </li>
                    </ul>
                    <form class="form-inline">
                            <p>Subscribe for latest updates </p>
                        <input type="email" class="form-control mr-sm-2" id="email" placeholder="Enter your email">
                        <button type="submit" class="btn btn-primary mt-2 mb-2">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/c106970ed7.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/jquery-3.7.1.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>